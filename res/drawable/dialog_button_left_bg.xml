<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>

			<!-- 渐变 -->
			<gradient android:endColor="#8BCFFC" android:startColor="#8BCFFC"
				android:type="linear" />
			<!-- 描边 
			<stroke android:dashGap="3dp" android:dashWidth="5dp"
				android:width="2dp" android:color="#dcdcdc" />-->
			<!-- 圆角 -->
			<corners    
          	android:topLeftRadius="0dp"  
          android:topRightRadius="0dp"  
          android:bottomLeftRadius="4dp"  
          android:bottomRightRadius="0dp"/>  

			<padding android:bottom="5dp" android:left="5dp"
				android:right="5dp" android:top="5dp" />
		</shape>
	</item>
	<item android:state_focused="true">
		<shape>
			<gradient android:endColor="#8BCFFC" android:startColor="#8BCFFC"
				android:type="linear" />
<!-- 			<stroke android:width="2dp" android:color="#dcdcdc" /> -->
			<corners    
          	android:topLeftRadius="0dp"  
          android:topRightRadius="0dp"  
          android:bottomLeftRadius="4dp"  
          android:bottomRightRadius="0dp"/>  
			<padding android:bottom="5dp" android:left="5dp"
				android:right="5dp" android:top="5dp" />
		</shape>
	</item>
	<item>
		<shape>
		    <corners    
          	android:topLeftRadius="0dp"  
          android:topRightRadius="0dp"  
          android:bottomLeftRadius="4dp"  
          android:bottomRightRadius="0dp"/>  
			<!-- 渐变 -->
			<gradient android:endColor="@android:color/transparent" android:startColor="@android:color/transparent"
				android:type="linear" />
			<padding android:bottom="5dp" android:left="5dp"
				android:right="5dp" android:top="5dp" />
		</shape>
	</item>

</selector>