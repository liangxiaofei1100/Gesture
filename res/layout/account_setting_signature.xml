<?xml version="1.0" encoding="utf-8"?>
<com.zhaoyan.common.view.RightSlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_background"
        android:orientation="vertical" >


        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/login_edittext_selector"
            android:orientation="vertical"
            android:padding="10dp" >

            <EditText
                android:id="@+id/et_as_signature"
                style="@style/edit_text_signature"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:hint="@string/account_setting_signature_hint" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/tv_as_signature_wordcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right" >
            </TextView>
        </LinearLayout>

        <include layout="@layout/account_setting_save_cancel_button" />
    </LinearLayout>

</com.zhaoyan.common.view.RightSlideLayout>